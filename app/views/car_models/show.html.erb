

<h1><%= @carmodel.name %></h1>
<p>Ano: <%= @carmodel.year %></p>
<p>Motorização: <%= @carmodel.motorization %></p>
<p>Combustivel: <%= @carmodel.fuel_type %></p>
<p>Fabricante: <%= @carmodel.manufacturer.name %></p>
<p>Categoria: <%= @carmodel.car_category.name %></p>

<% if current_user.admin? %>
    <%= link_to 'Editar', edit_car_model_path(@carmodel) %></br>
    <%= link_to 'Deletar', car_model_path(@carmodel), method: :delete, data:{confirm: "Deseja deletar este Modelo?"}%></br>
<% end %>
<%= link_to "Voltar", root_path %></br>
