<h3>Locações</h3>

<%= form_with url: search_rentals_path, local: true, method: :get do %>
    <%= label_tag :q, 'Código' %>
    <%= text_field_tag :q %>
    <%= submit_tag 'Buscar' %>
<% end %>

<%= link_to 'Novo Agendamento', new_rental_path %><br>

<% if @rentals.empty? %>
    <p> Não existem agendamentos cadastrados</p>
<% end %>

<% @rentals.each do |rental| %>
    <%= link_to rental.client.name, rental_path(rental) %><br>
<% end %>

